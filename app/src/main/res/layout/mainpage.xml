<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="hakimpje40.pnd.Mainpage"
    android:background="#232c3d">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="37dp"
            app:srcCompat="@drawable/bib_icon" />

        <Button
            android:id="@+id/addTreatmentbutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="#25a15f"
            android:textColor="#ffffff"
            android:text="Add Treatment" />

        <Button
            android:id="@+id/listTreatmentbutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/addTreatmentbutton"
            android:layout_marginTop="25dp"
            android:background="#3467d6"
            android:text="List Treatment"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/editTreatmentbutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/listTreatmentbutton"
            android:layout_marginTop="25dp"
            android:background="#25a15f"
            android:text="Edit Treatment"
            android:textColor="#ffffff" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
