<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListTreatment"
    android:background="#232c3d">


    <RelativeLayout

        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="245dp"
            android:layout_height="52dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="14dp"
            android:text="Current Treatment"
            android:textColor="#ffffff"
            android:textSize="25dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp" />


        <TextView
            android:id="@+id/textView10"
            android:layout_width="259dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="40dp"
            android:layout_marginTop="122dp"
            android:background="@android:color/darker_gray"
            android:text="Treatment A"
            android:textColor="#ffffff"
            android:textSize="20dp"
            tools:text="Treatment A"
            android:layout_marginLeft="40dp"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="259dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/textView10"
            android:layout_marginTop="197dp"
            android:background="@android:color/darker_gray"
            android:text="treatment B"
            android:textColor="#ffffff"
            android:textSize="20dp"
            tools:text="treatment B"
            android:layout_alignLeft="@+id/textView10" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="259dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/textView11"
            android:layout_marginBottom="179dp"
            android:background="@android:color/darker_gray"
            android:text="treatment C"
            android:textColor="#ffffff"
            android:textSize="20dp"
            tools:text="treatment C"
            android:layout_alignLeft="@+id/textView11" />


    </RelativeLayout>
</android.support.constraint.ConstraintLayout>